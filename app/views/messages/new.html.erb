<div class="container">
	<div class="row">
		<h1 class="col-md-12 text-center">New Message</h1>

		<div class="col-md-3 pb-3">
			<%= link_to '<< Back', messages_path, :class => "btn btn-secondary" %>
		</div>

		<div class="col-md-12">
			<%= form_with model: @message, url: messages_path, local: true do |form| %>

				<div class="form-group">
					<%= form.label :Receiver %><br>
					<%= form.collection_select :receiver, @friends , :id, :name, {require: true}, :class => "form-control" %>
				</div>

				<div class="form-group">
					<%= form.label :Text %><br>
					<%= form.text_area :text, :class => "form-control" %>
				</div>
				
				<input class="btn btn-primary" type="submit" value="Send">
			<% end %>
		</div>
	</div>
</div>

